<%= button_link_to t("cancel"), fire_admin_order_url(@order.number, {:e => "cancel"}), :icon => 'delete', :confirm => t('are_you_sure') if @order.can_cancel? %>
<%= button_link_to t("deliver"), deliver_admin_order_path(@order.number), :icon => 'edit' if @order.completed? && @order.shipment_state != 'shipped'%>
<%= button_link_to t("delivered"), delivered_admin_order_path(@order.number), :icon => 'edit' if @order.completed? && @order.shipment_state == 'shipped' && @order.payment_state != 'paid'%>
<%= button_link_to t("edit"), edit_admin_order_url(@order.number), :icon => 'edit' %>
